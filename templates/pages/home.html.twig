{% extends "layouts/app.html.twig" %}

{% block title %}{{ parent() }} | Solutions Engineer{% endblock %}

{% block main %}
    <div class="flex flex-col md:flex-row gap-10 md:gap-20 w-full items-center justify-center px-10">
        <div class="w-full md:w-1/2 flex flex-col items-start justify-center gap-6">
            <p class="text-text text-center md:text-left text-2xl md:text-3xl font-black uppercase">
                Full-stack software engineer with a passion for creating, learning, and developing solutions for a
                variety of problems.
            </p>

            <div class="flex items-center justify-start gap-6">
                <a class="h-fit w-fit" href="https://www.github.com/krbeasley" target="_blank">
                    {% include "components/ui/github-icon.html.twig" with {
                        'class' : 'invert-80 hover:invert-100 duration-100 transition cursor-pointer h-10 w-10'
                    } %}
                </a>
                {% include "components/ui/glass-button.html.twig" with {
                    'text' : 'Hire Me',
                    'href' : '/hire-me',
                    'frosted' : true,
                } %}
            </div>
        </div>
        <div class="w-full md:w-1/2 items-center">
            <img src="/public/images/me_pfp.jpg" alt="Me!"
                class="mx-auto object-cover w-full max-w-[300px] h-100 md:w-[340px] md:h-[340px] lg:w-[550px]
                lg:h-[450px] rounded-lg">
        </div>
    </div>

    <div class="h-100 w-100 bg-teal noise"></div>

    {% include "components/ui/divider.html.twig" %}
{% endblock %}